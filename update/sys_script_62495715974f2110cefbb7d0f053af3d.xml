        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {

    try {
        gs.info("Problem needs to be created");
        var ga = new GlideRecord('problem');
        ga.initialize();
        ga.setValue("category", current.category);
        ga.setValue("priority", current.priority);
        ga.setValue("short_description", current.short_description + " Created for Incident" + current.number + " with High Priority");
        ga.insert();
        current.work_notes = "Created Problem ticket : " + ga.getValue('number');
        //current.problem_id = ga.getValue('number');
        current.setWorkflow(false);
        current.update();
        current.setWorkflow(true);
        gs.info("Problem created : " + ga.getValue('number'));
    } catch (ex) {
        var message = ex.message;
        gs.error("Error in system logs when creating problem for Prio1 inc : " + message);
    }

})(current, previous);]]></script>
